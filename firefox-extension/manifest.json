{
  "manifest_version": 2,
  "name": "KanjiMap Highlighter",
  "version": "1.0",
  "description": "Highlights unknown kanji on webpages based on your KanjiMap progress.",
  "permissions": [
    "activeTab",
    "storage",
    "http://localhost:8081/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}

